{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@shared": [
        "./src/_shared/index"
      ],
      "@shared/*": [
        "./src/_shared/*"
      ],
    }
  },
  "include": [
    "src",
    "extenal"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}